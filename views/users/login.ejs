<% layout('./layout/boilerplate') %>
<body style="background-color: #495057;">
    <div class="container d-flex align-items-center justify-content-center mt-5">
        <div class="row flex-fill">
            <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <h1 class="card-title mb-4">Login</h1>
                        <form action="/login" class="needs-validation" method="post" novalidate>
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control mb-3 bg-dark text-white" name="username" id="username"
                                required autofocus>
    
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control mb-3 bg-dark text-white" name="password"
                                id="password" required>
    
                            <div class="d-grid gap-2">
                                <button class="btn btn-success" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

    